<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kimi.kel.core.mapper.UserInfoMapper">


    <select id="getUserName" resultType="java.lang.String" parameterType="long">
        select nick_name from user_info where id = #{userId}
    </select>
    <select id="getAvatar" resultType="java.lang.String" parameterType="long">
        select avatar from user_info where id = #{userId}
    </select>


</mapper>
